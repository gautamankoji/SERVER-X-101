{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "include": ["app/**/*.d.ts", "app/**/*.ts", "app/**/*.js", "app/**/*.svelte"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
